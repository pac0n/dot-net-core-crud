@model Items

<tr id="rowitem_@Model.ItemIndex">
    <td>
        @Model.ItemIndex
        <input type="hidden" name="Items[@Model.ItemIndex].ItemIndex" value="@Model.ItemIndex" />
    </td>
    <td>
        @Model.ProductName
        <input type="hidden" name="Items[@Model.ItemIndex].ProductName" value="@Model.ProductName" />
    </td>
    <td>
        @Model.Price
        <input type="hidden" name="Items[@Model.ItemIndex].Price" value="@Model.Price"  />
    </td>
    <td>
        @Model.Quantity
        <input type="hidden" name="Items[@Model.ItemIndex].Quantity" value="@Model.Quantity" />
    </td>
    <td><button id="@Model.ItemIndex" type="button" class="btn btn-sm bg-danger text-white remove_item">Remove</button></td>
</tr>