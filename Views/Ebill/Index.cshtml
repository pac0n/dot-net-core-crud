@model List<BillDetail>

@{
    ViewData["Title"] = "E-Bill";
}

<div class="container shadow rounded mt-4">
    <div class="row">
        <div class="col-12">
            <h4>All Bills</h4>

            <a class="btn btn-success mt-3 mb-3" asp-controller="Ebill" asp-action="Create">Create New</a>

            <table class="table table-responsive table-striped table-hover table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Customer Name</th>
                        <th>Mobile Number</th>
                        <th>Address</th>
                        <th>Total Amount</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
 
                    @foreach (var edetail in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m=>edetail.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(m=>edetail.CustomerName)
                            </td>
                            <td>
                                @Html.DisplayFor(m=>edetail.MobileNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(m=>edetail.Adress)
                            </td>
                            <td>
                                @Html.DisplayFor(m=>edetail.TotalAmount)
                            </td>
                            <td>
                                <a href="@Url.Action("View", new { id = edetail.Id })" class="btn btn-secondary">View</a>
                                <a href="@Url.Action("Edit", new { id = edetail.Id })" class="btn btn-primary">Edit</a>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>

        </div>
    </div>
</div>
